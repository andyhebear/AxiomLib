<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="axiom" type="Axiom.Framework.Configuration.AxiomConfigurationSection, Axiom.Framework"/>
  </configSections>
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <axiom xmlns="http://www.axiom3d.net/schemas/configuration/v1.0">
      <resourceLocations>
          <resourceLocation path="../media/archives/SdkTrays.zip" type="ZipFile"
              recurse="false" group="Essential" />
          <resourceLocation path="../media/thumbnails" type="Folder" recurse="false"
              group="Essential" />
          <resourceLocation path="../media/icons" type="Folder" recurse="false"
              group="Essential" />
          <resourceLocation path="../media/archives/HydraxSkyBoxes.zip"
              type="ZipFile" recurse="false" group="Popular" />
          <resourceLocation path="../media/archives/skybox.zip" type="ZipFile"
              recurse="false" group="Popular" />
          <resourceLocation path="../media/fonts" type="Folder" recurse="false"
              group="Popular" />
          <resourceLocation path="../media/materials/scripts" type="Folder"
              recurse="false" group="Popular" />
          <resourceLocation path="../media/materials/programs" type="Folder"
              recurse="false" group="Popular" />
          <resourceLocation path="../media/materials/textures" type="Folder"
              recurse="false" group="Popular" />
          <resourceLocation path="../media/models" type="Folder" recurse="false"
              group="Popular" />
          <resourceLocation path="../media/overlays" type="Folder" recurse="false"
              group="Popular" />
      </resourceLocations>
      <renderSystems>
          <renderSystem name="DirectX9">
              <options>
                  <option name="Rendering Device" value="NVIDIA Quadro NVS 295" />
                  <option name="Video Mode" value="640 x 480 @ 32-bit color" />
                  <option name="Full Screen" value="No" />
                  <option name="Resource Creation Policy" value="Create on all devices" />
                  <option name="VSync" value="No" />
                  <option name="VSync Interval" value="1" />
                  <option name="FSAA" value="None" />
                  <option name="Floating-point mode" value="Fastest" />
                  <option name="Allow NVPerfHUD" value="No" />
                  <option name="sRGB Gamma Conversion" value="No" />
                  <option name="Multi device memory hint" value="Use minimum system memory" />
              </options>
          </renderSystem>
      </renderSystems>
  </axiom>  
</configuration>
